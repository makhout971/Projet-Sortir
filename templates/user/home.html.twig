{% extends 'layout.html.twig' %}


{% block nav %}
<img src="{{ asset('images/imgsortir.jpg') }}"/>

  {% if   app.user   %}
    <h5> Bienvenue {{ app.user.username }} </h5>


  {% endif %}


{% endblock %}

{% block body %}

    {% if not is_granted('IS_AUTHENTICATED_FULLY')   %}
  <h2> Déjà {{ users }} utilisateurs inscrits et {{ sorties }} sorties organisées</h2>
      {% else %}
          {% for flashMessage in app.session.flashbag.get('successSortie') %}

                  <div style="background-color: yellow" style="color: darkviolet">
                  {{ flashMessage }}

              </div>
          {% endfor %}


    {% endif %}


{% endblock %}



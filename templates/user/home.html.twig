{% extends 'layout.html.twig' %}


{% block nav %}
<img src="{{ asset('images/imgsortir.jpg') }}"/>

  {% if   app.user   %}
    <h5> Bienvenue {{ app.user.username }} </h5>


  {% endif %}


{% endblock %}

{% block body %}

    {% if not is_granted('IS_AUTHENTICATED_FULLY')   %}
  <h2> Déjà {{ users}} utilisateurs inscrits et {{ sorties }} sorties organisées</h2>
    {% endif %}

  {% for flashMessage in app.session.flashbag.get('succesRegister') %}
    <div>
      {{ flashMessage }}
    </div>
  {% endfor %}


    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}

        <ul>
            {% for sortie in entities %}
                <li>{{ sortie.nom }}</li>
                <li>{{ sortie.dateHeureDebut.date }}</li>
                <li>{{ sortie.dateLimiteInscription.date}}</li>
                {#                TODO: chercher nb d'inscrits en base#}
                <li>{{ sortie.nbInscriptionMax }}</li>
                <li>{{ sortie.etat }}</li>
                {#                TODO: chercher si utilisateur en session inscrit#}
                <li>{{ sortie.userOrganisateur.nom }}</li>
            {% endfor %}
        </ul>





        <button><a href="{{ path('sortie') }}">Créer une sortie</a></button>


    {% endif %}


{% endblock %}





